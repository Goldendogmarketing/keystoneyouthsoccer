# Server Environment Variables

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/keystone_soccer

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long-change-this-in-production
BETTER_AUTH_URL=http://localhost:3000

# Authorize.net
AUTHORIZE_NET_API_LOGIN_ID=your_api_login_id
AUTHORIZE_NET_TRANSACTION_KEY=your_transaction_key
AUTHORIZE_NET_ENVIRONMENT=sandbox

# Resend (Email)
RESEND_API_KEY=re_your_api_key

# Master Admin (for initial setup)
MASTER_ADMIN_EMAIL=admin@keystoneyouthsoccer.org
MASTER_ADMIN_PASSWORD=change-this-secure-password-in-production
MASTER_ADMIN_NAME=Master Admin

# Other
MY_SECRET_VAR=http://localhost:3000

# Client Environment Variables (prefix with VITE_)
VITE_BASE_URL=http://localhost:3000
